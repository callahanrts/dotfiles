#!/bin/bash

mkdir -p ~/.wallpapers
pushd ~/.wallpapers
rm ~/.wallpapers/*.png
wget -O ~/.wallpapers/background.jpg https://source.unsplash.com/2880x1800/?nature

sqlite3 ~/Library/Application\ Support/Dock/desktoppicture.db "delete from data"
osascript <<END
  tell application "System Events"
      set picture of every desktop to "/Users/$(whoami)/.wallpapers/background.jpg"
  end tell
END
killall Dock

popd
